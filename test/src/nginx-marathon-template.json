{
  "id": "dcos-nginx",
  "cpus": 1,
  "mem": 128,
  "instances": 1,
  "constraints": [
    ["os", "LIKE", "Linux"]
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "nginx:1.9",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 80, "containerPort": 80, "protocol": "tcp"}
      ]
    }
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "port": 80,
      "path": "/",
      "protocol": "HTTP",
      "ignoreHttp1xx": false
    }
  ],
  "acceptedResourceRoles": [
    "slave_public"
  ],
  "labels":{
    "HAPROXY_GROUP":"external",
    "HAPROXY_0_VHOST":"{agentFQDN}",
    "HAPROXY_0_MODE":"http"
  }
}
